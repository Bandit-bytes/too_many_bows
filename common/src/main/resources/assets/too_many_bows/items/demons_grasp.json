{
  "model": {
    "type": "minecraft:condition",
    "property": "minecraft:using_item",
    "on_false": { "type": "minecraft:model", "model": "too_many_bows:item/demons_grasp" },
    "on_true": {
      "type": "minecraft:range_dispatch",
      "property": "minecraft:custom_model_data",
      "index": 0,
      "fallback": { "type": "minecraft:model", "model": "too_many_bows:item/demons_grasp_pulling_0" },
      "entries": [
        { "threshold": 0.65, "model": { "type": "minecraft:model", "model": "too_many_bows:item/demons_grasp_pulling_1" } },
        { "threshold": 0.9,  "model": { "type": "minecraft:model", "model": "too_many_bows:item/demons_grasp_pulling_2" } }
      ]
    }
  }
}
